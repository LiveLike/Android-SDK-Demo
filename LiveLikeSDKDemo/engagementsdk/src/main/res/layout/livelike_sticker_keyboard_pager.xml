<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emoji_keyboard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/livelike_sticker_keyboard_height"
    android:orientation="vertical"
    android:visibility="visible">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pager_tab">


    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/pager_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/livelike_sticker_keyboard_tab_height"
        android:background="@color/livelike_sticker_keyboard_tab_background_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/livelike_sticker_keyboard_tab_indicator_color"
        app:tabMaxWidth="60dp"
        app:tabMode="scrollable" />

</androidx.constraintlayout.widget.ConstraintLayout>